@model IEnumerable<Department>


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if (Model.Count()>0) {
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>  
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.CreateAT)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreateAT</td>
                    <td>
                        <a asp-action="Details" asp-route-id="department.id" class="btn btn-warning">
                            <i class="fa fa-eye"></i>Details</a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="department.id" class="btn btn-success">
                            <i class="fa fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="department.id" class="btn btn-danger">
                            <i class="fa fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>}

        </tbody>
    </table>
            
    
}

else
{
    <div class="mt-5 alert alert-danger"><h3>No Department Exist</h3></div>
     

}

